<h1>BMI Calculator</h1>
<p>Sign with us and get your BMI index</p>

<%= form_with scope: :user, url: '/users/confirm', local: true do |form| %>

  <% if @user.errors.any?%>
    <div class="error_login">
      <h2>
        <%= pluralize(@user.errors.count, "error")%>
        Something happened wrong trying to Log In.
      </h2>

      <ul>
        <% @user.errors.full_messages.each do |msg|%>
          <li><%= msg%></li>
      <%end%>
      </ul>
    </div>
  <%end%>

  <p>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </p>

  <p>
    <%= form.label :password%>
    <%= form.password_field :password%>
  </p>

  <p>
    <%= form.submit :"Log In"%>
  </p>
<%end%>

<%= link_to 'SignIn if you have not an account yet', signin_path%>
